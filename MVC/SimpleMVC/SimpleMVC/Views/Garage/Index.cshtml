@{
    ViewData["Title"] = "My Garage";
}

<div class="text-center">
    <h1 class="display-4">Cars</h1>
    @if (Model == null || Model?.Count == 0)
    {
        <p>No cars found in your garage.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead style="background-color: #930606; color: #fff;">
            <tr>
                <td>License</td>
                <td>Make</td>
                <td>Model</td>
                <td>Year</td>
            </tr>
            </thead>
            <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.CarId</td>
                    <td>@c.Make</td>
                    <td>@c.Model</td>
                    <td>@c.Year</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>